<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Anyco" %></title>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto", "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
    <nav class="main">
      <h1>
        <%= link_to "Anyco", "/", class: "logo-link" %>
      </h1>
      <ul class="topic-nav">
        <li class="topic-nav-item"><%= link_to "Stairs Gallery", "/gallery" %></li>
        <li class="topic-nav-item"><%= link_to "Services", "/services" %></li>
        <li class="topic-nav-item"><%= link_to "Contact Us", "/contact" %></li>
      </ul>
    </nav>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
